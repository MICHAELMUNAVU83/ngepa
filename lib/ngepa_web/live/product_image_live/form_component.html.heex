<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="product_image-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= hidden_input(f, :product_id, value: @product.id) %>

    <%= label(f, :image_url) %>
    <%= text_input(f, :image_url) %>
    <%= error_tag(f, :image_url) %>

    <div>
      <%= submit("Save", phx_disable_with: "Saving...") %>
    </div>
  </.form>
</div>
