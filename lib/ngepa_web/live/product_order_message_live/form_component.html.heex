<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="product_order_message-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= label(f, :message) %>
    <%= text_input(f, :message) %>
    <%= error_tag(f, :message) %>

    <%= hidden_input(f, :product_order_id, value: @product_order.id) %>

    <div>
      <%= submit("Save", phx_disable_with: "Saving...") %>
    </div>
  </.form>
</div>
